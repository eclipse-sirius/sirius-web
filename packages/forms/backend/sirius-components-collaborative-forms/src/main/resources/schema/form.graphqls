  id: ID!
  label: String!
  iconURL: String
  diagnostics: [Diagnostic!]!
  hasHelpText: Boolean!
  items: [ListItem!]!
  style: ListStyle
}

type ListStyle {
  color: String
  fontSize: Int
  italic: Boolean
  bold: Boolean
  underline: Boolean
  strikeThrough: Boolean
}

type ListItem {
  id: ID!
  label: String!
