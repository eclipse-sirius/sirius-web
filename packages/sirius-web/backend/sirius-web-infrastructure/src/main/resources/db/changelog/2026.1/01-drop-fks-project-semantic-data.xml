<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="01-drop-fks-project-semantic-data-add-unique-constraints" author="ntinsalhi">
        <dropForeignKeyConstraint
                baseTableName="project_semantic_data"
                constraintName="fk_project_semantic_data_project_id"/>
        <dropForeignKeyConstraint
                baseTableName="project_semantic_data"
                constraintName="fk_project_semantic_data_semantic_data_id"/>
        <addUniqueConstraint tableName="project_semantic_data" columnNames="semantic_data_id" />
        <addUniqueConstraint tableName="project_semantic_data" columnNames="project_id, name"/>
    </changeSet>
</databaseChangeLog>