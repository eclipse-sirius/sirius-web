{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "format": {
      "outputs": []
    },
    "format-lint": {
      "outputs": []
    },
    "build": {
      "dependsOn": ["format-lint", "^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "coverage": {
      "dependsOn": ["build"]
    },
    "publish:local": {
      "dependsOn": ["build"]
    },
    "build-dev": {
      "dependsOn": ["format-lint", "^build-dev"]
    },
    "start": {
      "dependsOn": ["format-lint", "^build-dev"],
      "persistent": true
    }
  }
}
