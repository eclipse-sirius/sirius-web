{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "coverage": {
      "dependsOn": ["build"]
    },
    "publish:local": {
      "dependsOn": ["build"]
    }
  }
}
