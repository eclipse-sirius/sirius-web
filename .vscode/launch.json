{
  "version": "0.2.0",
  "configurations": [
	    {
       "type": "chrome",
       "request": "launch",
       "name": "Sirius Web (Chrome)",
       "url": "http://localhost:5174",
       "webRoot": "${workspaceFolder}",
       "userDataDir": "${workspaceFolder}/.vscode/vscode-chrome-profile",
       "runtimeArgs": ["--auto-open-devtools-for-tabs"],
       "sourceMaps": true,
       "sourceMapPathOverrides": {
         "vite:///*": "${workspaceFolder}/*",
         "/@fs/*": "/*"
       },
       "preLaunchTask": "start sirius-web dev server"
     },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug All sirius-components-core Tests",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
      "args": [
        "--config",
        "${workspaceFolder}/packages/core/frontend/sirius-components-core/vite.config.js",
        "run",
        "--dir",
        "${workspaceFolder}/packages/core/frontend/sirius-components-core/src"
      ],
      "smartStep": true,
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug All sirius-components-forms Tests",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
      "args": [
        "--config",
        "${workspaceFolder}/packages/forms/frontend/sirius-components-forms/vite.config.js",
        "run",
        "--dir",
        "${workspaceFolder}/packages/forms/frontend/sirius-components-forms/src"
      ],
      "smartStep": true,
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug All sirius-components-formdescriptioneditors Tests",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
      "args": [
        "--config",
        "${workspaceFolder}/packages/formdescriptioneditors/frontend/sirius-components-formdescriptioneditors/vite.config.js",
        "run",
        "--dir",
        "${workspaceFolder}/packages/formdescriptioneditors/frontend/sirius-components-formdescriptioneditors/src"
      ],
      "smartStep": true,
      "console": "integratedTerminal"
    },

    {
      "type": "node",
      "request": "launch",
      "name": "Debug All sirius-components-trees Tests",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
      "args": [
        "--config",
        "${workspaceFolder}/packages/trees/frontend/sirius-components-trees/vite.config.js",
        "run",
        "--dir",
        "${workspaceFolder}/packages/trees/frontend/sirius-components-trees/src"
      ],
      "smartStep": true,
      "console": "integratedTerminal"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Sirius Web (Chrome)",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}",
      "userDataDir": "${workspaceFolder}/.vscode/vscode-chrome-profile",
      "runtimeArgs": ["--auto-open-devtools-for-tabs"],
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "vite:///*": "${workspaceFolder}/*",
        "/@fs/*": "/*"
      }
    }
  ]
}
